package ConditionalStatementsAdvanced.exe;

import java.util.Scanner;

public class p01Cinema {
    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);

            String projects = scanner.nextLine();
            int rows = Integer.parseInt(scanner.nextLine());
            int columns = Integer.parseInt(scanner.nextLine());

            double income = 0.0;
            if (projects.equals("Premiere")){
                income=12;
                System.out.printf("%.2f leva" , rows*columns*income );
            }else if (projects.equals("Normal")){
                income=7.5;
                System.out.printf("%.2f leva", rows*columns*income);
            }else if(projects.equals("Discount")){
                income=5;
                System.out.printf("%.2f leva", rows*columns*income);
            }


    }
}
